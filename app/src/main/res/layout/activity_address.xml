<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_88"
        android:layout_marginTop="@dimen/a_20"
        android:visibility="gone"
        android:background="@color/player_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_30"
            android:gravity="center_vertical"
            android:text="@string/region"
            android:textColor="@color/bh_333333"
            android:textSize="@dimen/t_30" />

        <EditText
            android:id="@+id/et_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_40"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/a_20"
            android:gravity="center_vertical"
            android:hint="@string/region"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/t_30" />
    </LinearLayout>

    <include layout="@layout/item_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_176"
        android:background="@color/player_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/a_30"
            android:layout_marginTop="@dimen/a_20"
            android:gravity="center_vertical"
            android:text="@string/detail_address"
            android:textColor="@color/bh_333333"
            android:textSize="@dimen/t_30" />

        <EditText
            android:id="@+id/et_detail_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_40"
            android:layout_marginTop="@dimen/a_14"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/a_20"
            android:gravity="start"
            android:hint="@string/detail_address"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/t_30" />
    </LinearLayout>

    <include layout="@layout/item_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_88"
        android:visibility="gone"
        android:background="@color/player_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_30"
            android:gravity="center_vertical"
            android:text="@string/postal_code"
            android:textColor="@color/bh_333333"
            android:textSize="@dimen/t_30" />

        <EditText
            android:id="@+id/et_postal_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_40"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/a_20"
            android:gravity="center_vertical"
            android:hint="@string/postal_code"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/t_30" />
    </LinearLayout>

</LinearLayout>
