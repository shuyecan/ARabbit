<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/a_30"
        android:layout_height="@dimen/a_200"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/a_160"
                android:layout_height="@dimen/a_160"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/a_20"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/a_24"
                android:layout_toRightOf="@+id/user_image"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/a_10"
                        android:text="用户名称"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_32" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买商品:"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gf_title"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tx_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="秒爆价:"
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_28" />
                    <TextView
                        android:id="@+id/mb_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text=""
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_28" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买时间："
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/mb_time"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
