<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_EEEEEE"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_252"
        android:background="@mipmap/img_gerenxinxi">

        <ImageView
            android:id="@+id/iv_image_more"
            android:layout_width="@dimen/a_136"
            android:layout_height="@dimen/a_136"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/a_20"
            android:scaleType="fitXY"
            android:src="@mipmap/denglu_img_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/a_24"
            android:layout_marginTop="@dimen/a_60"
            android:layout_toRightOf="@+id/iv_image_more"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/a_20"
                android:text=""
                android:textColor="@color/player_white"
                android:textSize="@dimen/t_32"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>

                <View
                    android:layout_width="@dimen/a_2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:background="@color/player_white"/>

                <TextView
                    android:id="@+id/tv_address_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text=""
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>


                <TextView
                    android:id="@+id/tv_account_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text=""
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>


                <TextView
                    android:id="@+id/tv_school_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text=""
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_32"/>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/lv_seat_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_100"
        android:background="@color/bh_025ed0">

        <TextView
            android:id="@+id/tv_prevs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/a_20"
            android:gravity="center"
            android:text="上一页"
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_36"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="转到"
                android:textColor="@color/player_white"
                android:textSize="@dimen/t_32"/>


            <EditText
                android:id="@+id/ed_num"
                style="@null"
                android:layout_width="@dimen/a_80"
                android:layout_height="@dimen/a_50"
                android:layout_margin="@dimen/a_10"
                android:background="@color/player_white"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:text="1"
                android:textSize="@dimen/t_28"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="/1"
                android:textColor="@color/player_white"
                android:textSize="@dimen/t_32"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/a_20"
            android:gravity="center"
            android:text="下一页"
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_36"/>

    </RelativeLayout>

</LinearLayout>
