<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/player_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="@dimen/a_100"
            android:layout_height="@dimen/a_100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/a_20"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/a_30"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/t_34" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="地址"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/color_cccccc"
                    android:layout_marginRight="@dimen/a_10"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shopfar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/a_10"
                    android:layout_marginRight="@dimen/a_10"
                    android:gravity="center"
                    android:text="2.5"
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/a_10"
                    android:text="km"
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_28" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_1"
        android:layout_marginLeft="@dimen/a_30"
        android:background="@color/hn_e5e5e5" />
</LinearLayout>

