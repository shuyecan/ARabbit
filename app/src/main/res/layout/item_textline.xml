<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="上海"
            android:textSize="@dimen/t_30"
            android:layout_marginLeft="@dimen/a_20"
            android:textColor="@color/bh_666666"/>
        <View
            android:layout_width="2dip"
            android:layout_height="22dp"
            android:background="#66CCFF"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <TextView
        android:id="@+id/tv_value"
        android:layout_width="@dimen/a_170"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_city"
        android:layout_marginLeft="2dp"
        android:padding="@dimen/a_20"
        android:text="公司参展展会列表"
        android:textSize="@dimen/t_30"
        android:layout_weight="0.85" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="2017.02.23"
        android:textSize="@dimen/t_30"
        android:layout_marginRight="@dimen/a_20"
        android:textColor="@color/bh_666666"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/bg_view"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layerType="software">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_xce"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:background="#00000000"
            android:src="@mipmap/xce" />
        <ImageView
            android:id="@+id/iv_vedio"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:background="#00000000"
            android:src="@mipmap/vedio2" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:background="#00000000"
            android:src="@mipmap/gif2" />
        <ImageView
            android:id="@+id/iv_przie"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:src="@mipmap/jiang1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_2"
        android:layout_marginLeft="@dimen/a_20"
        android:layout_marginRight="@dimen/a_20"
        android:background="@color/gray" />
</LinearLayout>
