<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <include layout="@layout/layout_head" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_1"
        android:layout_marginTop="@dimen/a_10"
        android:background="@color/hn_e5e5e5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/a_30"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pr_type"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_60"
                android:text="秒爆抽奖"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_32" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_50"
                android:gravity="center_vertical"
                android:text="活动距离:"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <TextView
                android:id="@+id/far"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_10"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_28" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/a_20"
                android:text="米"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/a_60"
            android:layout_marginTop="@dimen/a_70"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_20"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="开始时间:"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/a_10"
                android:text="20180920"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <LinearLayout
                android:id="@+id/line_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/a_10"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_50"
                    android:text="结束时间:"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text="20180930"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_bao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/a_10"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_50"
                    android:text="活动时间:"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />
                <TextView
                    android:id="@+id/pro_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text="10"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/a_20"
                    android:text="分钟"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_330"
        android:layout_marginTop="@dimen/a_20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pro_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/pro" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_1"
        android:layout_marginTop="@dimen/a_30"
        android:background="@color/hn_e5e5e5" />

</LinearLayout>
