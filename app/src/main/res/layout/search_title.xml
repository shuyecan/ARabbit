<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/a_90"
    android:background="@color/player_black"
    android:padding="@dimen/a_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ac1"/>





    <ImageView
        android:id="@+id/search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/a_20"
        android:gravity="center"
        android:padding="@dimen/a_6"
        android:layout_alignParentRight="true"
        android:src="@mipmap/sch"  />
    <EditText
        android:id="@+id/sch_value"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:background="@color/player_white"
        android:text=""
        android:hint="请输入"
        android:textColor="@color/result_view"
        android:textSize="@dimen/t_40"
        android:layout_toRightOf="@id/iv_back"
        android:layout_toLeftOf="@id/search"
        android:paddingLeft="5dp"
        />

</RelativeLayout>
