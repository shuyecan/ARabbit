<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/a_30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_good"
                android:layout_width="@dimen/a_136"
                android:layout_height="@dimen/a_136"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/a_20"
                android:scaleType="fitXY"
                android:src="@mipmap/denglu_img_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/a_24"
                android:layout_marginTop="@dimen/a_10"
                android:layout_toRightOf="@+id/image_good"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/a_20"
                    android:text="商品名称标题"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_36" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/good_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品内容信息介绍"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量："
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/good_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text="商品数量"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/a_160"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/a_30"
                    android:gravity="center_vertical"
                    android:text="秒爆价："
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text="￥"
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_30" />

                <TextView
                    android:id="@+id/mb_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text=""
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_30" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_90"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="@color/bh_666666"
                    android:textSize="@dimen/t_24" />

                <TextView
                    android:id="@+id/mb_preprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/bh_666666"
                    android:textSize="@dimen/t_24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/a_30"
                    android:gravity="center_vertical"
                    android:text="开始时间:"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/a_10"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />

                <LinearLayout
                    android:id="@+id/line_cust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/a_10"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_50"
                        android:text="活动时间:"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <TextView
                        android:id="@+id/pro_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_10"
                        android:text="20"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:text="分钟"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/a_40"
                android:layout_marginTop="@dimen/a_20"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买用户："
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_28" />

                <TextView
                    android:id="@+id/buy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/a_20"
                    android:layout_toRightOf="@+id/gf_pnum"
                    android:text="人"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_28" />

                <TextView
                    android:id="@+id/mb_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/a_200"
                    android:layout_toRightOf="@+id/gf_pnum"
                    android:text="查看用户"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_28" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
