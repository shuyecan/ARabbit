<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <include layout="@layout/layout_title1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/layout_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bt_editor"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/a_50"
                    android:layout_marginRight="@dimen/a_20"
                    android:src="@mipmap/editor"/>

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/a_50"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/a_20"
                    android:src="@mipmap/addpr"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_1"
                android:layout_marginTop="@dimen/a_10"
                android:background="@color/hn_e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pt_type"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_60"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="活动距离:"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <TextView
                        android:id="@+id/pt_far"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_10"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:text="米"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <TextView
                        android:id="@+id/rule"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_50"
                        android:gravity="center_vertical"
                        android:text="查看活动规则"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/a_60"
                    android:layout_marginTop="@dimen/a_60"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:text="开始时间:"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/a_10"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_24" />

                    <LinearLayout
                        android:id="@+id/line_cust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/a_10"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_30"
                            android:text="结束时间:"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text=""
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_bao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/a_10"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text="活动时间:"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:id="@+id/pro_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text="10"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/a_20"
                            android:gravity="center_vertical"
                            android:text="分钟"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_110"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_join"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_60"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_20"
                            android:gravity="center_vertical"
                            android:text="参加活动用户:"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:id="@+id/user_join"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/a_20"
                            android:gravity="center_vertical"
                            android:text="人"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_win"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_80"
                            android:gravity="center_vertical"
                            android:text="中奖用户："
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:id="@+id/user_win"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/a_20"
                            android:gravity="center_vertical"
                            android:text="人"
                            android:textColor="@color/black_212121"
                            android:textSize="@dimen/t_24" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_1"
                android:layout_marginTop="@dimen/a_20"
                android:background="@color/hn_e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_80"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text="奖品清单"
                    android:textColor="@color/player_red"
                    android:textSize="@dimen/t_32" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_1"
                android:layout_marginTop="@dimen/a_10"
                android:background="@color/hn_e5e5e5" />

            <com.arabbit.view.ListViewForScrollView
                android:id="@+id/lv_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
