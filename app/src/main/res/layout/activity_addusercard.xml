            android:layout_marginLeft="@dimen/a_30"
            android:gravity="center_vertical"
            android:text="公司名称："
            android:textColor="@color/colorblack"
            android:textSize="@dimen/t_32"/>

        <EditText
            android:id="@+id/user_com"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/a_20"
            android:gravity="center_vertical"
            android:textColor="@color/player_black"
            android:hint="请输入您的公司名称"
            android:textColorHint="@color/gray_A3A3A3"/>
    </LinearLayout>
