<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_252"
                android:background="@mipmap/img_gerenxinxi">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/a_136"
                    android:layout_height="@dimen/a_136"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/a_20"

                    android:src="@mipmap/denglu_img_logo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_24"
                    android:layout_marginTop="@dimen/a_60"
                    android:layout_toRightOf="@+id/iv_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/a_20"
                        android:text=""
                        android:textColor="@color/player_white"
                        android:textSize="@dimen/t_32"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>

                        <View
                            android:layout_width="@dimen/a_2"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:background="@color/player_white"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text=""
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account"
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>

                        <TextView
                            android:id="@+id/tv_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text=""
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/school"
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>


                        <TextView
                            android:id="@+id/tv_school"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/a_10"
                            android:text=""
                            android:textColor="@color/player_white"
                            android:textSize="@dimen/t_32"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_detail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/a_74"
                    android:text="城市"
                    android:textSize="@dimen/t_30"/>

                <TextView
                    android:id="@+id/tv_exhbty"
                    android:layout_width="400dp"
                    android:layout_height="@dimen/a_74"
                    android:text="展会"
                    android:textSize="@dimen/t_30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<ImageView-->
                    <!--android:id="@+id/ex_image"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="495dp"-->
                    <!--/>-->
                <com.arabbit.activity.album.MyGridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:numColumns="4"
                    android:verticalSpacing="5dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_uppic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_168"
                android:layout_marginTop="@dimen/a_20"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_upxce"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/a_98"
                    android:layout_gravity="center"
                    android:background="@drawable/shipe_btn_blue"
                    android:gravity="center"
                    android:text="上传"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_30"/>

                <TextView
                    android:id="@+id/tv_edxce"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/a_74"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/shipe_btn_blue"
                    android:gravity="center"
                    android:text="编辑"
                    android:visibility="gone"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_30"/>
            </LinearLayout>

            <!--<ListView-->
            <!--android:id="@+id/lv_seat"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="450dp"-->
            <!--android:divider="@null"/>-->


            <LinearLayout
                android:id="@+id/layout_buttom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_168"
                android:layout_marginTop="@dimen/a_20"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="@dimen/a_384"
                    android:layout_height="@dimen/a_74"
                    android:layout_gravity="center"
                    android:background="@drawable/shipe_btn_blue"
                    android:gravity="center"
                    android:text="@string/send_message"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_30"/>

                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="@dimen/a_384"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/a_20"
                    android:background="@drawable/shipe_btn_blue"
                    android:gravity="center"
                    android:text="@string/video_chat"
                    android:textColor="@color/player_white"
                    android:textSize="@dimen/t_30"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
