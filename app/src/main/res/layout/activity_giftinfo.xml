<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_330"
                android:layout_marginTop="@dimen/a_20"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gf_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--参加活动用户：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/jo_user"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="参加活动用户："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/jo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="人"
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:layout_marginTop="@dimen/a_10"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--领取用户：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/gf_user"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="领取用户："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="人"
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:layout_marginTop="@dimen/a_20"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--礼物名称：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="礼品名称："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--标签介绍：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_gf_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="标签介绍："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />

                    <TextView
                        android:id="@+id/gf_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--礼品数量：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="礼品数量："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--活动距离：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="活动距离："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_far"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_100"
                        android:gravity="center_vertical"
                        android:text="米"
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--活动开始时间：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="活动开始时间："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_start"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--活动结束时间：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="活动结束时间："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--礼品详细说明：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_30"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="详细说明："
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/gf_content"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:layout_marginTop="@dimen/a_20"
                        android:layout_marginBottom="@dimen/a_30"
                        android:text=""
                        android:textColor="@color/bh_666666"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/gf_ed"
                        android:layout_width="@dimen/a_120"
                        android:layout_height="@dimen/a_80"
                        android:layout_marginRight="@dimen/a_150"
                        android:layout_marginTop="@dimen/a_30"
                        android:src="@mipmap/update"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/gf_del"
                        android:layout_width="@dimen/a_120"
                        android:layout_height="@dimen/a_80"
                        android:layout_marginLeft="@dimen/a_150"
                        android:layout_marginTop="@dimen/a_30"
                        android:src="@mipmap/delete"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
