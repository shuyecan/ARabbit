<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_90"
        android:background="@color/player_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:src="@mipmap/ac1"/>

        <TextView
            android:id="@+id/title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_35"/>


        <ImageView
            android:id="@+id/tv_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/a_20"
            android:drawablePadding="@dimen/a_10"
            android:gravity="center"
            android:padding="@dimen/a_6"
            android:src="@mipmap/closes"
            android:visibility="visible"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_98"
        android:background="@mipmap/gerenxinxi_btn_liaotian"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/a_30"
            android:paddingRight="@dimen/a_30"
            android:text="@string/homepage"
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_32"/>

        <View
            android:layout_width="@dimen/a_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/a_16"
            android:layout_marginTop="@dimen/a_15"
            android:background="@color/color_ffa64c"/>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/a_20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_32"/>

        <View
            android:layout_width="@dimen/a_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/a_16"
            android:layout_marginLeft="@dimen/a_20"
            android:layout_marginTop="@dimen/a_15"
            android:background="@color/color_ffa64c"/>

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/a_30"
            android:paddingRight="@dimen/a_30"
            android:text="@string/past"
            android:textColor="@color/player_white"
            android:textSize="@dimen/t_32"/>
    </LinearLayout>
</LinearLayout>
