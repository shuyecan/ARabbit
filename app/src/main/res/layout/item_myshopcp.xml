<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/a_30"
        android:layout_height="@dimen/a_180"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cp_image"
                android:layout_width="@dimen/a_136"
                android:layout_height="@dimen/a_136"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/a_20"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/a_24"
                android:layout_marginTop="@dimen/a_10"
                android:layout_toRightOf="@+id/cp_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/a_20"
                    android:text=""
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_36" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buy_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_10"
                        android:text="￥"
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_30" />

                    <TextView
                        android:id="@+id/cp_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_10"
                        android:text=""
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/a_160"
                        android:text="购买时间："
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/cp_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text=""
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
