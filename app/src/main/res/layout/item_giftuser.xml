<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/a_30"
        android:layout_height="@dimen/a_180"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/a_136"
                android:layout_height="@dimen/a_136"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/a_20"
                android:scaleType="fitXY"
                android:src="@mipmap/denglu_img_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/a_24"
                android:layout_marginTop="@dimen/a_10"
                android:layout_toRightOf="@+id/user_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/a_20"
                    android:text="用户名称"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_32" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/gf_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="礼品:"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/gf_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gf_title"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text="礼品名称"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="领取时间："
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                    <TextView
                        android:id="@+id/gf_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/a_20"
                        android:text="领取时间"
                        android:textColor="@color/black_212121"
                        android:textSize="@dimen/t_28" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
