<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/a_30"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_20"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_28" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/a_10"
                android:text="."
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_28" />

            <TextView
                android:id="@+id/sales_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_20"
                android:text=""
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_32" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/a_30"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_30"
                android:gravity="center_vertical"
                android:text="活动距离:"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <TextView
                android:id="@+id/far"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_10"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_28" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/a_20"
                android:text="米"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/a_30"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/a_30"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="开始时间:"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/a_10"
                android:text=""
                android:textColor="@color/black_212121"
                android:textSize="@dimen/t_24" />
            <LinearLayout
                android:id="@+id/line_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/a_10"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text="结束时间:"
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/a_10"
                    android:text=""
                    android:textColor="@color/black_212121"
                    android:textSize="@dimen/t_24" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/a_20"
                android:layout_marginLeft="@dimen/a_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cpgood"
                    android:layout_width="@dimen/a_136"
                    android:layout_height="@dimen/a_136"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/a_10"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@mipmap/denglu_img_logo" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
