<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--上传标题图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_168"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mb_bt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="添加图片："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />


                    <ImageView
                        android:id="@+id/mb_image"
                        android:layout_width="@dimen/a_126"
                        android:layout_height="@dimen/a_126"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/shipe_tv_tra" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/a_20"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:src="@mipmap/arrow_personal_icon" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--商品名称：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="商品名称："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                    <EditText
                        android:id="@+id/mb_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--标签介绍：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="标签介绍："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                    <EditText
                        android:id="@+id/mb_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--秒爆价：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="秒爆价："
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_32" />

                    <EditText
                        android:id="@+id/mb_price"
                        android:layout_width="@dimen/a_100"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:textColor="@color/player_red"
                        android:textColorHint="@color/player_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/a_100"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_30" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--市场价：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="市场价："
                        android:textColor="@color/player_black"
                        android:textSize="@dimen/t_32" />

                    <EditText
                        android:id="@+id/mb_preprice"
                        android:layout_width="@dimen/a_100"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:textColor="@color/player_red"
                        android:textColorHint="@color/player_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/a_100"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/player_red"
                        android:textSize="@dimen/t_30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--商品数量：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="数量："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                    <EditText
                        android:id="@+id/mb_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--活动开始时间：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_start"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"

                        android:gravity="center_vertical"
                        android:text="活动开始时间："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/mb_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--活动结束时间：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/a_100"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_end"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"

                        android:gravity="center_vertical"
                        android:text="活动结束时间："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                    <TextView
                        android:id="@+id/mb_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="@dimen/a_20"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />
            </LinearLayout>
            <!--商品详细说明：-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/a_20"
                android:background="@color/player_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:gravity="center_vertical"
                        android:text="详细说明："
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/t_32" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/a_10"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/mb_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/a_30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="请输入内容"
                        android:inputType="textMultiLine"
                        android:maxLines="8"
                        android:textColor="@color/player_black"
                        android:textColorHint="@color/player_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a_1"
                    android:layout_marginLeft="@dimen/a_30"
                    android:background="@color/hn_e5e5e5" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/player_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commit"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/a_30"
                    android:layout_marginLeft="@dimen/a_30"
                    android:src="@mipmap/commit" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
